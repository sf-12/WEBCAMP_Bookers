<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book|%>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%=link_to "Show", books_path %></td>
        <td><%=link_to "Edit", books_path %></td>
        <td><%=link_to "Destroy", books_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>New book</h2>
<%= form_with model:@book, local: true do |f|%>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="acrions">
    <%= f.submit "Create Book" %>
  </div>
<% end %>