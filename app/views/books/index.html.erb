<h1>Books</h1>
<!-- 投稿一覧部分-->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%=link_to "Show", book_path(book) %></td>
        <td><%=link_to "Edit", edit_book_path(book) %></td>
        <td><%=link_to "Destroy", book_path(book),method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- 投稿フォーム部分 -->
<h2>New book</h2>
<%= form_with model:@book, local: true do |f|%>
  <!-- エラーメッセージ表示部分 -->
  <% if @book.errors.any? %>
    <div class="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- フォーム部分 -->
  <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "Create Book" %>
  </div>
<% end %>